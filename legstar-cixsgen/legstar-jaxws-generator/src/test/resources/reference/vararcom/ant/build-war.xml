<?xml version="1.0" encoding="UTF-8"?>
<!-- =================================================================================
     Create a distribution archive for an adapter.
  -->
<project basedir=".." default="create-war" name="build-war">
    <target name="create-jar">
        <ant antfile="target\src\gen\ant\vararcom/build-jar.xml"/>
    </target>
    <target name="create-war" depends="create-jar">
        <war warfile="target\src\gen\target/cixs-vararcom.war"
                webxml="target\src\gen\webapp\vararcom/web.xml">
            <webinf dir="target\src\gen\webapp\vararcom"
                    includes="sun-jaxws.xml"/>
            <!-- Generated Jaxws implementation jar file -->
            <lib dir="target\src\gen\target">
                <include name="cixs-vararcom.jar"/>
            </lib>
        </war>
    </target>
</project>